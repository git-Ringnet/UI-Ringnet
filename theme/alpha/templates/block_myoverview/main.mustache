{{!
@template block_myoverview/main

This template renders the main content area for the myoverview block.

Example context (json):
{}
}}

<div id="block-myoverview-{{uniqid}}" class="block-myoverview block-cards" data-region="myoverview" role="navigation">
    <div class="d-inline-flex justify-content-between flex-wrap w-100 py-2">
        <div class="course mb-1 mr-auto d-flex mt-auto">
            <a class="title mr-2 pt-2 border rounded px-3 btn btn-primary" href="{{config.wwwroot}}/my/courses.php">
                {{#str}}courses, moodle{{/str}}
            </a>
            <a href="{{config.wwwroot}}/course/index.php" class="title pt-2 border rounded px-2 btn btn-primary">
                {{#str}}categories, moodle{{/str}}
                </a>
        </div>
            {{#status}}
            <a href="{{config.wwwroot}}/course/edit.php?returnto=catmanage" class="btn btn-primary">
       {{#str}} createnewcourse, moodle{{/str}}
            </a>
            {{/status}}
    </div>
    <div data-region="filter" class="d-flex align-items-center"
        aria-label="{{#str}} aria:controls, block_myoverview {{/str}}">
        <div class="d-inline-flex justify-content-between flex-wrap w-100 mt-2">
            {{> block_myoverview/nav-grouping-selector }}
            {{> block_myoverview/nav-sort-selector }}
            <div class="d-none">
            {{#displaydropdown}}
            {{> block_myoverview/nav-display-selector }}
            {{/displaydropdown}}
            </div>
        </div>
        <div class="mt-2 w-100">
            {{> block_myoverview/nav-search-widget }}
        </div>
    </div>
    <div class="container-fluid p-0">
        {{> block_myoverview/courses-view }}
    </div>
</div>
{{#js}}
require(
[
'jquery',
'block_myoverview/main',
],
function(
$,
Main
) {
var root = $('#block-myoverview-{{uniqid}}');
Main.init(root);
});
{{/js}}
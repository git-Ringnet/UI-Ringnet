{{!
    @template core/signup_form_layout

    Example context (json):
    {
        "logourl": "https://moodle.org/logo/moodle-logo.svg",
        "sitename": "Site name",
        "formhtml": "<p>(Form html would go here)</p>"
    }
}}

    <div class="rui-backtologin">
        <a href="{{{ config.wwwroot }}}/login/index.php" class="btn--back">
            <svg width="24" height="24" fill="none" viewBox="0 0 24 24">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.25 6.75L4.75 12L10.25 17.25"></path>
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.25 12H5"></path>
            </svg>
        </a>
    </div>

    <div class="rui-logo-top-btn">
        {{#stringbacktologin}}<span class="rui-login-calabel">{{{stringbacktologin}}}</span>{{/stringbacktologin}} <a href="{{{ config.wwwroot }}}/login/index.php" class="btn-link--clean">{{#str}}login{{/str}}</a>
    </div>

    <div class="rui-signup-layout">
        <div class="rui-login-wrapper row no-gutters align-items-center justify-content-start">
            <div class="rui-login-container row no-gutters">
                <div class="text-center mb-4 w-100">
                    {{#customloginlogo}}
                    <a href="{{{ config.wwwroot }}}"><h2 class="rui-login-logo mb-0"><img src="{{customloginlogo}}" title="{{sitename}}" alt="{{sitename}}" class="img-fluid"/></h2></a>
                    {{/customloginlogo}}

                    {{^customloginlogo}}
                    {{#logourl}}
                    <a href="{{{ config.wwwroot }}}"><h2 class="rui-login-logo mb-0"><img src="{{logourl}}" title="{{sitename}}" alt="{{sitename}}" class="img-fluid"/></h2></a>
                    {{/logourl}}

                    <!--{{^logourl}}
                    <a href="{{{ config.wwwroot }}}"><h2 class="mb-0">{{sitename}}</h2></a>
                    {{/logourl }}-->
                    {{/customloginlogo}}
                </div>
                <div class="rui-signup-box rui-book-wrapper1" style="margin: 0 auto;max-width: 476px;max-height: 625px;box-shadow: 0px 2px 15px #888888;padding: 30px;border-radius: 8px;">

                    <h4 class="rui-login-logo text-center" style="font-size: 24px;">{{#str}}newaccount{{/str}}</h4>
                    
                    <div class="rui-loginpage-intro">
                        {{#signupintrotext}}
                        <div class="rui-loginpage-intro-content">
                            {{{signupintrotext}}}
                        </div>
                        {{/signupintrotext}}
                    </div>


                    <div class="rui-login-form">
                        {{{formhtml}}}
                    </div>
                    <!-- .rui-login-form -->

                </div>
                <!-- .rui-signup-box -->

                {{#signuptext}}
                <div class="rui-signup-additional-content">
                    {{{signuptext}}}
                </div>
                {{/signuptext}}

            </div>
        </div>
    </div><!-- .login layout #1 -->

    <script>
        var email1 = document.getElementById("email1");
        var email2 = document.getElementById("email2");
        email1.addEventListener("input", function() {
            email2.value = email1.value;
        });
    </script>
